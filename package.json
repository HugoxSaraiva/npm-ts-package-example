{
    "name": "npm-ts-package-example",
    "version": "0.0.2",
    "description": "An example TypeScript package to serve as headstart for developing other packages.",
    "main": "./out/index.js",
    "types": "./out/index.d.ts",
    "files": [
        "out"
    ],
    "exports": {
        ".": "./out/index.js",
        "./utils": "./out/utils/index.js"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/HugoxSaraiva/npm-ts-package-example.git"
    },
    "scripts": {
        "test": "jest -o",
        "test:all": "jest",
        "build": "tsc -p tsconfig.build.json",
        "watch": "tsc -p tsconfig.build.json -w",
        "lint": "eslint . --ext .ts",
        "fix": "eslint . --ext .ts --fix",
        "prettify": "prettier --write .",
        "lint-staged": "lint-staged",
        "prepare": "husky install"
    },
    "keywords": [],
    "author": "Hugo Saraiva do Nascimento",
    "license": "MIT",
    "engines": {
        "node": ">=14.0.0"
    },
    "devDependencies": {
        "@types/jest": "^29.5.0",
        "@typescript-eslint/eslint-plugin": "^5.57.1",
        "@typescript-eslint/parser": "^5.57.1",
        "eslint": "^8.38.0",
        "eslint-config-prettier": "^8.8.0",
        "husky": "^8.0.3",
        "jest": "^29.5.0",
        "lint-staged": "^13.2.1",
        "prettier": "^3.0.0",
        "ts-jest": "^29.1.0",
        "typescript": "^5.0.4"
    }
}
